= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :current_team
    = f.text_field :current_team
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :time
    = f.text_field :time
  .actions
    = f.submit 'Save'
