%h1 Listing teams

%table.table.table-hover
  %tr
    %th Event Name
    %th Name
    %th Description
    %th Members
    %th Image url
    %th
    %th
    %th

  - @teams.each do |team|
    %tr
      %td= team.event.name
      %td= team.name
      %td= team.description
      %td= team.members
      %td= team.image_url
      %td= link_to 'Show', team
      %td= link_to 'Edit', edit_team_path(team)
      %td= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Team', new_team_path
